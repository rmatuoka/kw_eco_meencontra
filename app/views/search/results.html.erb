<%content_for :head do%>
	<%= stylesheet_link_tag "pesquisa.css" %>
<%end%>

    <div id='article'>
    	<div id='a_text'>
        	<%= image_tag("tit_encontre.png")%>
            <p>Selecione no formulário abaixo as opções que correspondem com o perfil do profissional que você procura.</p>
        </div>
    	<div id='a_content1'>        	
            <%=form_tag results_search_index_path, :method => :post%>               
                <%= collection_select :search, :cidade, @Cidades, :city, :city,{:prompt => "CIDADE", :size=>"10"}, :class => "categoria dk" %>                
                <%= collection_select :search, :estado, @Estados, :state, :state,{:prompt => "ESTADO", :size=>"10"}, :class => "categoria dk" %>              
                <%= collection_select :search, :atuacao, @Atuacao, :area_of_​​expertise, :area_of_​​expertise,{:prompt => "AREA DE ATUAÇÃO", :size=>"10"}, :class => "area dk" %>                
                <%= collection_select :search, :disponibilidade, @Disponibilidade, :availability, :availability,{:prompt => "DISPONIBILIDADE", :size=>"10"}, :class => "disponibilidade dk" %>
                <%=image_submit_tag("bt_pesquisar.png", :style => "float:right;")%>
            </form>
        </div>
        <div id='a_content2'>
        	<%= image_tag("tit_resultados.png")%>
                
                <%@Resultados.each do |r|%>
                    <div id="box_resultado">
                        <br />
                        <p><b>Nome:</b> <%=r.name%><br />
                        <p><b>Cidade:</b> <%=r.city%><br />
                        <p><b>Estado:</b> <%=r.state%><br />
                        <p><b>Area de atuação:</b> <%=r.area_of_​​expertise%><br />
                        <%= link_to image_tag("bt_contato.png", :class =>"bt_contato"), new_id_contact_path(r), :class => "fancybox" %>
                        </p>
                    </div>
                <%end%>
                <div class="clear"></div>
            </div>
        </div>
    
